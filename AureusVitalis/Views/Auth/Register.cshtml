@model AureusVitalis.Models.RegisterModel
@{
    ViewData["Title"] = "Registration";
}

<header class="site-header">
    <a href="/" class="nav-icon">
        <img src="~/images/home.png" alt="Home" />
    </a>
    <div class="site-title">Aureus&Vitalis</div>
    <a href="/Auth/Login" class="nav-icon">
        <img src="~/images/profile.png" alt="Profile" />
    </a>
</header>

<div class="auth-container">
    <div class="auth-header">
        <h2>Registration</h2>
    </div>
    <form asp-action="Register" asp-controller="Auth" method="post" class="auth-form">
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <div class="input-container">
                <input asp-for="Password" type="password" />
                <button type="button" class="toggle-password">
                    <img src="~/images/eye.png" alt="Toggle password visibility" />
                </button>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="gender-group">
            <div class="gender-option">
                <input type="radio" id="male" name="Gender" value="M" asp-for="Gender" />
                <label for="male">лю</label>
            </div>
            <div class="gender-option">
                <input type="radio" id="female" name="Gender" value="F" asp-for="Gender" />
                <label for="female">лќ</label>
            </div>
        </div>
        <span asp-validation-for="Gender" class="text-danger"></span>
        <button type="submit" class="auth-button">Sign up</button>
    </form>
</div>